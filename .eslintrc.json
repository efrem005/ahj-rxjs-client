{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "import/extensions": ["error", "always", { "js": "ignorePackages" }],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "no-new": "off",
    "no-nested-ternary": "off"
  }
}
